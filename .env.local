# PodioGo Server - Configuração para Desenvolvimento Local
# Servidor roda localmente, infraestrutura (PostgreSQL, Redis) no Docker

# Node Environment
NODE_ENV=development

# Application
PORT=3333
INSTANCE_ID=1

# Database - PostgreSQL (rodando no Docker, acessível via localhost)
POSTGRES_USER=podiogo
POSTGRES_PASSWORD=podiogo123
POSTGRES_DB=podiogo
POSTGRES_PORT=5432
POSTGRES_REPLICA_PORT=5433

# URLs apontando para localhost (onde Docker expõe as portas)
DATABASE_URL=postgresql://podiogo:podiogo123@localhost:5432/podiogo?schema=public&connection_limit=20&pool_timeout=20
DATABASE_READ_REPLICA_URL=postgresql://podiogo:podiogo123@localhost:5433/podiogo?schema=public&connection_limit=10&pool_timeout=20

# Redis (rodando no Docker, acessível via localhost)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=podiogo123
REDIS_DB=0
REDIS_ENABLED=true

# JWT
JWT_SECRET=change-me-in-production-this-should-be-a-very-long-random-string-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=another-very-long-random-string-for-refresh-tokens-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=session-secret-change-me-in-production-minimum-32-characters

# Sentry (opcional - desabilitado em dev)
SENTRY_DSN=
SENTRY_ENABLED=false

# CDN (opcional - desabilitado em dev)
CDN_URL=
CDN_ENABLED=false

# Cielo Payment Gateway (sandbox por padrão)
CIELO_MERCHANT_ID=
CIELO_MERCHANT_KEY=
CIELO_ENVIRONMENT=sandbox

# Email (Nodemailer) - opcional em dev
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@podiogo.com

# WhatsApp (opcional)
WHATSAPP_API_URL=
WHATSAPP_API_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000
